<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             x:Class="SchoolService.Pages.InitialPage"
             BackgroundColor ="White">

    <VerticalStackLayout
        Spacing="20"
        VerticalOptions="Center">
        <Button 
                BorderColor="Black"
                BorderWidth="1"
                FontSize="Large"
                BackgroundColor="#03fc07"
                TextColor="White"
                WidthRequest="350"
                CornerRadius="20"
                HorizontalOptions="Center"
                Text="Worker"
                Clicked="WorkerButton_Clicked"/>
        <Button 
                BorderColor="Black"
                BorderWidth="1"
                FontSize="Large"
                BackgroundColor="White"
                TextColor="#03fc07"
                WidthRequest="350"
                CornerRadius="20"
                HorizontalOptions="Center"
                Text="School"
                Clicked="SchoolButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>